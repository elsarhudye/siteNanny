{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	{#{{dump(categories)}}#}
	<h1>Liste des categories</h1>
	<table>
		<thead>
			<tr>
				<th>id</th>
				<th>name</th>
				<th>nannies</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{category.id}}</td>
					<td>{{category.name}}</td>
					<td>
						{% for nanny in category.nannies %}
							{{nanny.name}}
						{% endfor %}
					</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
{% endblock %}
